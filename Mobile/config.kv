WindowManager:
    LoginPage:
    MainPage:
    OrderPage:

<LoginPage>:
    name: 'login'
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Логин'
        TextInput:
            id: login
            text: 'restik'
            multiline: False

        Label:
            text: 'Пароль'
        TextInput:
            id: password
            text: 'pass'
            multiline: False

        Button:
            text: "Вход"
            on_release:
                root.login(login=login.text, password=password.text)
<MainPage>:
    name: 'main'

    BoxLayout:
        orientation: 'vertical'

        Button:
            text: 'Выход'
            size_hint: (0.15, 0.1)
            pos_hint: {'right': 1, 'top': 1}
            on_release:
                root.logout()

        Label:
            text: 'Заказы'
            size_hint_y: 0.2

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            on_scroll_y: root.check_pull_refresh(self)
            GridLayout:
                cols: 1

<OrderPage>:
    name: 'order'
    BoxLayout:
        orientation: 'vertical'

        Button:
            text: 'Назад'
            size_hint: (0.15, 0.1)
            pos_hint: {'left': 1, 'top': 1}
            on_release:
                root.back()

        Label:
            text: 'Заказ'
            size_hint_y: 0.2

        GridLayout:
            cols: 2
            canvas.before:
                Color:
                    rgba: 0.5, 0.5, 0.5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        Button:
            text: 'Выполнить'
            background_color: (0, 1, 0, 1)
            size_hint_y: 0.2
            on_release:
                root.complete_order()