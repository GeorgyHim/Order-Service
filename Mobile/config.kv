WindowManager:
    LoginPage:
    MainPage:
    OrderPage:

<LoginPage>:
    name: "login"
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Логин'
        TextInput:
            id: login
            text: 'restik'
            multiline: False

        Label:
            text: 'Пароль'
        TextInput:
            id: password
            text: 'pass'
            multiline: False

        Button:
            text: "Вход"
            on_release:
                root.login(login=login.text, password=password.text)
<MainPage>:
    name: "main"

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        on_scroll_y: root.check_pull_refresh(self)
        GridLayout:
            cols: 1
            size_hint_y: 9

<OrderPage>:
    name:"order"
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        GridLayout:
            cols: 2
            size_hint_y: 9
            row_force_default:True
            row_default_height:100
